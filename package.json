{
  "name": "pacelab.lms",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev:web": "npm --workspace web run dev",
    "dev:api": "npm --workspace api run start:dev",
    "dev": "npm-run-all --parallel dev:web dev:api",
    "build:web": "npm --workspace web run build",
    "build:api": "npm --workspace api run build",
    "build": "npm-run-all --parallel build:web build:api",
    "start:web": "npm --workspace web run start",
    "start:api": "npm --workspace api run start",
    "start": "npm-run-all --parallel start:web start:api",
    "deploy:web": "npm run build:web && npm run start:web",
    "deploy:api": "npm run build:api && npm run start:api"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.10"
  }
}
